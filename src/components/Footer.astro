---
import VerticalComponentList from "../layouts/VerticalComponentList.astro";
import FooterLink from "./FooterLink.astro";
---

<footer class="bg-primary text-secondary">
  <div id="contact" class="flex flex-col max-w-[1280px] m-auto p-6">
    <div class="my-6 flex flex-row justify-between">
      <div class="text-secondary font-bold self-end">
        <p class="text-2xl">Made in</p>
        <p class="text-background text-4xl">
          Lucknow<br /><span>India.</span>
        </p>
      </div>
      <div class="flex flex-row justify-between w-1/3">
        <VerticalComponentList id="social">
          <FooterLink href="#Email" body="Email" />
          <FooterLink href="#Github" body="GitHub" />
          <FooterLink href="#LinkedIn" body="LinkedIn" />
          <FooterLink href="#Twitter" body="Twitter" />
          <FooterLink href="#Instagram" body="Instagram" />
        </VerticalComponentList>
        <VerticalComponentList id="nav">
          <FooterLink href="#Work" body="Work" />
          <FooterLink href="#Blog" body="Blog" />
          <FooterLink href="#Contact" body="Contact" />
          <FooterLink href="#About" body="About" />
        </VerticalComponentList>
      </div>
    </div>
    <p>&copy;2023</p>
  </div>
</footer>
